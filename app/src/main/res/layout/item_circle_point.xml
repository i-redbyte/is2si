<?xml version="1.0" encoding="utf-8"?>
<ru.rambler.libs.swipe_layout.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/point_circle_size"
    android:layout_height="wrap_content"
    app:left_swipe_enabled="false"
    app:right_swipe_enabled="true"
    >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_point"
        >

        <TextView
            android:id="@+id/tvPoint"
            android:layout_width="@dimen/point_circle_size"
            android:layout_height="@dimen/point_circle_size"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:background="?selectableItemBackgroundBorderless"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="100009"
            />

    </FrameLayout>

    <FrameLayout
        android:layout_width="@dimen/point_circle_size"
        android:layout_height="@dimen/point_circle_size"
        android:layout_marginTop="4dp"
        android:background="@color/red"
        app:bring_to_clamp="150dp"
        app:clamp="self"
        app:gravity="right"
        app:sticky="@dimen/point_circle_size"
        tools:ignore="MissingPrefix"
        >

        <TextView
            android:id="@+id/tvRemove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="@string/points.remove_point"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:drawableTopCompat="@drawable/ic_remove"
            />
    </FrameLayout>

</ru.rambler.libs.swipe_layout.SwipeLayout>